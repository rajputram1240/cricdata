<!DOCTYPE html>
<html lang="en">
  <%- include('partials/admin_header', { activePage: activePage }) %>
<body>
  <%- include('partials/adm_sdbar', { activePage: activePage }) %>

  <!-- Main Content -->
  <div class="content">
    <h1 class="text-center">Admin Dashboard</h1>
    <a href="/matches/new" class="btn btn-primary my-3">Add New Match</a>
    <table class="table table-bordered table-responsive">
      <thead>
        <tr>
          <th>Team 1</th>
          <th>Team 2</th>
          <th>Date</th>
          <th>Venue</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% matches.forEach(match => { %>
          <tr>
            <td><%= match.team1 %></td>
            <td><%= match.team2 %></td>
            <td><%= match.date.toDateString() %></td>
            <td><%= match.venue %></td>
            <td>
              <a href="/matches/<%= match._id %>/edit" class="btn btn-warning btn-sm">Edit</a>
              <form action="/matches/<%= match._id %>/delete" method="POST" style="display:inline;">
                <button class="btn btn-danger btn-sm">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <%- include('partials/admin_footer', { year: new Date().getFullYear() }) %>
</body>
</html>