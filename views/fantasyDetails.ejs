                              <% if (index ===  threePlusWkth2h[player].length - 1) { %>
                                <a href="/scorecard/<%= player1[1] %>"><%= player1[0] %></a>
                               <% } else { %>
                                <a href="/scorecard/<%= player1[1] %>"><%= player1[0] %></a>,
