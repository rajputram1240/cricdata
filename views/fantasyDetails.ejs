        </div>
          <% Object.entries(h2hData).forEach(function([key, player]) { %>
            <div class="match-card">
              <h5>
                <a href="javascript:void(0);" onclick="togglePlayerStats(`<%= key.replace(/\s+/g, '') %>Statsh2h`)">
                  <%= key.split('-')
                  .map(part => part.charAt(0).toUpperCase() + part.slice(1))
