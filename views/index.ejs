<body>
  <!-- Include Navbar -->
  <%- include('partials/menu', { activePage: activePage }) %>

  <!-- Include Hero Section -->
  <%- include('partials/hero', { heroText: heroText, heroImage: heroImage }) %>

  <!-- Navigation Cards -->
  <div class="container">
    <div class="row">
      <% cards.forEach(card => { %>
        <%- include('partials/card', { card: card }) %>
